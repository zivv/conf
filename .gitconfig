[push]
  default = simple
[core]
  editor = vim
  excludesfile = ~/.gitignore_global
[diff]
  tool = vimdiff
[merge]
  tool = vimdiff
[difftool]
  prompt = false
[alias]
  a = add
  br = branch
  ci = commit
  co = checkout

  d = diff
  dc = diff --cached
  dh = diff HEAD
  dl = diff HEAD~1 HEAD
  dt = difftool
  dtc = difftool --cached
  dth = difftool HEAD
  dtl = difftool HEAD~1

  l = log
  lf = ls-files
  mg = merge
  rb = rebase
  rh = reset HEAD
  ro = remote

  sh = stash
  shl = stash list
  shs = stash show -p
  sp = stash pop

  st = status

  pl = pull
  plm = pull origin master
  plo = pull origin
  ps = push
  psm = push origin master
  pso = push origin
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
