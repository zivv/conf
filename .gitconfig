[push]
  default = simple
[core]
  editor = vim
  excludesfile = ~/.gitignore_global
[diff]
  tool = vimdiff
[merge]
  tool = vimdiff
[difftool]
  prompt = false
[alias]
  co = checkout
  br = branch
  ci = commit
  st = status
  l = log
  ro = remote
  mg = merge
  lf = ls-files
  a = add
  sh = stash
  sp = stash pop
  rb = rebase
  rh = reset HEAD

  ps = push
  pso = push origin
  psm = push origin master
  pl = pull
  plo = pull origin
  plm = pull origin master

  d = diff
  dc = diff --cached
  dh = diff HEAD
  dl = diff HEAD~1 HEAD
  dt = difftool
  dtc = difftool --cached
  dth = difftool HEAD
  dtl = difftool HEAD~1
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
