[core]
  excludesfile = ~/.gitignore_global
[diff]
  tool = vimdiff
[merge]
  tool = vimdiff
[difftool]
  prompt = false
[alias]
  c = config
  co = checkout
  br = branch
  ci = commit
  st = status
  l = log
  l1 = log -1 HEAD
  ro = remote
  mg = merge
  rh = reset --hard
  lf = ls-files
  a = add

  ps = push
  pso = push origin
  psm = push origin master
  pl = pull
  plo = pull origin
  plm = pull origin master

  d = diff
  dc = diff --cached
  dh = diff HEAD
  dl = diff HEAD~1 HEAD
  dt = difftool
  dtc = difftool --cached
  dth = difftool HEAD
  dtl = difftool HEAD~1 HEAD
